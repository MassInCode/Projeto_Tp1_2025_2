             <VBox alignment="CENTER" prefHeight="500.0" prefWidth="490.0">
                 <children>
                     <Label fx:id="lblTitulo" alignment="CENTER" contentDisplay="TOP" prefHeight="73.0" prefWidth="466.0" text="Agendar Entrevista">
                         <font>
                             <Font name="System Bold" size="36.0" />
                         </font>
                     </Label>

                     <Separator orientation="VERTICAL" prefHeight="50.0" prefWidth="3.0" visible="false" />

                     <DatePicker fx:id="dpCalendario" prefHeight="36.0" prefWidth="234.0" />

                     <Separator orientation="VERTICAL" prefHeight="25.0" prefWidth="0.0" visible="false" />
                     <HBox alignment="CENTER" prefHeight="40.0" prefWidth="234.0" spacing="10.0">
                         <children>
                             <Label text="Hora:" />
                             <ChoiceBox fx:id="cbHora" prefWidth="75.0" />
                             <Label text="Minuto:" />
                             <ChoiceBox fx:id="cbMinuto" prefWidth="75.0" />
                         </children>
                     </HBox>
                     <Separator orientation="VERTICAL" prefHeight="25.0" prefWidth="0.0" visible="false" />
                     <ChoiceBox fx:id="cbAvaliador" prefWidth="150.0" />
                     <Label fx:id="lblNome" />

                     <Separator orientation="VERTICAL" prefHeight="50.0" prefWidth="0.0" visible="false" />

                     <HBox prefHeight="56.0" prefWidth="490.0">
                         <children>
                             <Separator prefWidth="50.0" visible="false" />
